<ol class="breadcrumb">
  <li><a href="/product">All Products</a></li>
  <li><a href="/product/<%= product.id %>">Product Detail: <%= product.model %> </a></li>
  <li class="active">Edit <%= product.id %></li>
</ol>

    <h4>Product Detail</h4>

    <div class="product">
      <form class="form-horizontal" method="POST" action="/product/<%= product.id %>">
      
        <div>
          <!-- we're making our app so no one can change the id. -->
          ID: <%= product.id %>
          <input type="hidden" value="<%= product.id %>">
        </div>

        


        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"> Model</label>
            <div class="col-sm-10">
            <input class="form-control" type="text" name="model" value="<%= product.model %>">
            </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"> Color</label>
            <div class="col-sm-10">
            <input class="form-control" type="text" name="color" value="<%= product.color %>">
            </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"> Type</label>
            <div class="col-sm-10">
            <input class="form-control" type="text" name="type" value="<%= product.type %>">
            </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"> Price</label>
            <div class="col-sm-10">
            <input class="form-control" type="text" name="price" value="<%= product.price %>">
            </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"> Max Width</label>
            <div class="col-sm-10">
            <input class="form-control" type="text" name="maxWidth" value="<%= product.maxWidth %>">
            </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"> IMG File Location</label>
            <div class="col-sm-10">
            <input class="form-control" type="text" name="imgFileLocation" value="<%= product.imgFileLocation %>">
            </div>
        </div>


        <button class="btn btn-primary" type="submit">Save changes</button>
      </form>

      <br>

      <form method="post" action="/product/<%= product.id %>/delete">
        <button class="btn btn-danger" type="submit">Delete product</button>
      </form>
    </div>
    <br>
    <p>
      <a href="/product/<%= product.id %>"><< Back to product</a>
    </p>
  </body>
</html>
